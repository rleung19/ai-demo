# Oracle Autonomous Database Serverless Configuration
# Copy this file to .env and fill in your actual values

# ADB Connection - Wallet Path
# Path to the directory containing your ADB wallet files
# Example: /path/to/wallet or ./wallet
ADB_WALLET_PATH=

# ADB Connection String
# RECOMMENDED: Use TNS alias from tnsnames.ora (simple format)
# Example: hhzj2h81ddjwn1dm_high
# 
# Alternative formats:
# - TNS alias: hhzj2h81ddjwn1dm_high (recommended, works with thin/thick mode)
# - Host:Port/Service: adb.us-chicago-1.oraclecloud.com:1522/service_name (thin mode)
# - Full TNS description: (description=...) (thick mode only, not recommended)
ADB_CONNECTION_STRING=

# ADB Credentials
# Username for OML schema (typically "OML" or your schema name)
ADB_USERNAME=OML
# Password for the OML schema
# IMPORTANT: If password contains special characters (#, $, !, etc.), use quotes:
# ADB_PASSWORD="YourPassword#123"
ADB_PASSWORD=

# Optional: TNS Admin (usually same as wallet path)
# If not set, will use ADB_WALLET_PATH
TNS_ADMIN=

# API Configuration
# Port for Next.js API (default: 3000)
API_PORT=3000

# Environment
NODE_ENV=development

# OCI Model Deployment Endpoints
# OCI Data Science model deployment endpoints for recommender models
# These endpoints are obtained from your OCI Data Science Notebook deployment cells
# Format: https://modeldeployment.{region}.oci.customer-oci.com/ocid1.datasciencemodeldeployment.oc1.{region}.{id}
# Do NOT include the /predict suffix - it will be added automatically
OCI_PRODUCT_RECOMMENDER_MODEL_ENDPOINT=
OCI_BASKET_RECOMMENDER_MODEL_ENDPOINT=
